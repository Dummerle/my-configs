#exec "setxkbmap -layout sv"

#set font
font pango: FontAwesome 10

#####################[WINDOWS AND WORKSPACES]#######################
# Use Mouse+$super to drag floating windows to their wanted position
floating_modifier $super

new_window pixel 0

#set the gaps
gaps inner 25
gaps outer 25


#smart_borders on
smart_gaps on

# kill focused window
bindsym $super+q kill

